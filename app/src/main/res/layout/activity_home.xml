<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Background"
    tools:context=".Home">


    <android.support.v7.widget.CardView
        android:id="@+id/user_Details"
        app:cardBackgroundColor="@color/White"
        android:layout_width="match_parent"
        android:layout_height="200dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/agentImage"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="30dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:clickable="true"
                android:background="@drawable/upload222"
                />

            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:background="@color/White">

            <EditText
                android:id="@+id/name"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Your Name"
                android:textAlignment="center"
                android:textColor="@color/Black"/>

            <EditText
                android:id="@+id/email"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Your Email"
                android:textAlignment="center"
                android:textColor="@color/Black"/>


            <TextView
                android:id="@+id/phone"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textAlignment="center"
                android:textColor="@color/Black"/>

            </LinearLayout>



        </LinearLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_below="@id/user_Details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

     <Button
        android:id="@+id/upload_address_proof"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@color/Button"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:text="Upload Id for adress proff"
        android:textColor="@color/White"
        android:layout_below="@id/user_Details"/>

        <Button
            android:id="@+id/upload_NOC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@color/Button"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:text="Upload NOC"
            android:textColor="@color/White"
            android:layout_below="@id/user_Details"/>



        <Button
            android:id="@+id/LIC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@color/Button"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:text="LIC"
            android:textColor="@color/White"
            android:layout_below="@id/user_Details"/>

        <Button
            android:id="@+id/Update_Profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@color/Button"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:text="UPDATE"
            android:textColor="@color/White"
            android:layout_below="@id/user_Details"/>

    </LinearLayout>



</RelativeLayout>